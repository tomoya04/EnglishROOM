<% if @users.any? %>
  <ul class ="media">
      <li class ="media">
          <% @users.each do |user| %>
               <div class ="media-left">
                 <img src ="<%= gravatar_url(user,{ size: 30 }) %>" alt="">
               </div>
               <div class ="media-body">
                 <%= user.name %>
               </div>
               <div>
                 <p><%= link_to "profile",user_path(user) %></p>
               </div>
          <% end %>
     </li>
  </ul>
  <%= paginate @users %>
<% end %>
