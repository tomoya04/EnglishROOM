<% if @users.any? %>
  <ul class ="media">
      <li class ="media">
          <% @users.each do |user| %>
               <div class ="media-left">
                 <% if user.image? %>
                 <%= image_tag(user.image.url,:size => "80x80") %>
               <% else %>
                 <%= image_tag("m_e_others_500.png",:size => "80x80") %>
               <% end %>
               </div>
               <div class ="media-body">
                 <%= user.name %>
               </div>
               <div>
                 <p><%= link_to "profile",user_path(user) %></p>
               </div>
          <% end %>
     </li>
  </ul>
  <%= paginate @users %>
<% end %>
