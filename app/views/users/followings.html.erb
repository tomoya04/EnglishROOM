<h2 class="text-center">Followings Lists</h2>

<div class ="row">
   <div class ="col-md-8 col-md-offset-2">

     <% if @users.any? %>
        <ul class ="media-list">
          <% @users.each do |user| %>
             <li class ="media">
                <div class ="media-left">
                    <% if user.image? %>
                       <%= image_tag(user.image.url,:size => "80x80") %>
                    <% else %>
                       <%= image_tag("m_e_others_500.png",:size => "80x80") %>
                    <% end %>
                </div>
                <div class ="media-body name">
                   <%= link_to user.name, user_path(user) %>
                </div>
             </li>   
          <% end %>
        </ul>
      <%= paginate @users %>
    <% end %>

   </div>
</div>