<div> 
    <%= form_tag(users_path, method: "get") do %>
        <%= label_tag :name, "名前" %>
        <%= text_field_tag :name, params[:name] %>
        <%= submit_tag "検索" %>
    <% end %>
</div>


<h4>ユーザー一覧</h4>
   <% if @users.any? %>
     <ul class ="media-list"> 
          <% @users.each do |user| %>
            <li class ="media">
               <div class ="media-left">
                   <% if user.image? %>
                     <%= image_tag(user.image.url,:size => "80x80") %>
                   <% else %>
                     <%= image_tag("m_e_others_500.png",:size => "80x80") %>
                   <% end %>
               </div>
               <div class ="media-body">
                 <div class ="name">
                     <%= link_to user.name, user_path(user) %>
                 </div>
               </div>
             </li>  
        <% end %>
     </ul>
  <%= paginate @users %>
  <% end %>
