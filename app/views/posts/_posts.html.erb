<ul class ="media-list">
   <% posts.each do |post| %> 
     <li class="media">
           <div class ="media-left image">
               <% if post.user.image? %>
                  <%= post.user.image %>
               <% else %>
                  <%= image_tag("m_e_others_500.png")%>
               <% end %>
           </div>
           <div class="media-body">
               <div>
                  <%=link_to post.user.name, user_path(post.user) %>
               </div>
               <span>posted at<%= post.created_at %></span>
               <div>
                   <%=link_to post.content, post_path(post) %>
               </div>
               
           </div>
        </li>
    <% end %>

 <%= paginate posts %>
</ul>