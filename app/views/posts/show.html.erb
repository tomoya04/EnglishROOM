<h4>詳細ページ</h4>
    <div class ="media-left">
       <% if @post.user.image? %>
         <%=image_tag(@post.user.image.url,:size => "80x80") %>
       <% else %>
          <%= image_tag("m_e_others_500.png")%>
       <% end %>
    </div>
    <div class="media-body">
     <div class="name">
      <%=link_to @post.user.name, user_path(@post.user) %>
   </div>
  <div class ="well">
   <div>
       <%=@post.content %>
   </div>
   <% if @post.image? %>
    <p><%= image_tag(@post.image) %></p>
   <% end %>
     <div>
        <span class ="text-muted">posted at<%= @post.created_at %></span>
    　</div>
    <%= render "favorites/like",post:@post %>
   <% if @post.user == current_user %>
       <%= link_to "編集する",edit_post_path(@post),class: 'btn btn-danger btn-xs' %>
       <%= link_to "削除する",@post,method: :delete, data: { confirm: "本当に？"},class: 'btn btn-danger btn-xs' %>
   <% end %>
   </div>
</div>

<h4>コメント一覧</h4>
<% @comments.each do |comment| %>
  <div>
    <%= link_to comment.user.name,user_path(comment.user) %> : <%= comment.content %>
    <% if comment.user == current_user %>
      <%= link_to "削除する",comment, method: :delete, data: { confirm: "本当に？"} %>
    <% end %>
  </div>
    
<% end %>

<h4>コメントする</h4>
  <%= form_for([@post, @comment]) do |f| %>
   <div>
     <%= f.text_field :content ,rows: 2 %>
   </div>
   <%= f.submit "comment!",class: 'btn btn-primary'%>
  <% end %>
 

