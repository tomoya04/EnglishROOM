<% if logged_in? %>
     <%= form_for(@post) do |f| %>
        <div class="form-group">
             <%= f.text_area :content, class: 'form-control', rows: 10 %>
        </div>
        <p>
            <%=f.label "画像をアップロード" %>
        　　<%= f.file_field :image %>
        </p>
       
       <%= f.submit "Post!", class: 'btn btn-primary' %>
     <% end %>
<% end %>